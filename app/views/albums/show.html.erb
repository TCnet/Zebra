<% provide(:title, "Show album") %>

<div class="row">
  <aside class="col-md-3 albums_menu">
   <%= render 'shared/album_menu' %>
  </aside>
  <div class="col-md-9">
     <h1>Show albums</h1>
    <section class="album_info">
      <%= image_tag @album.coverimg,width:"120",height: "120"%>
      <span><%=@album.name%></p>
<span><%=@album.summary%></p>
<span><%= link_to "edit",edit_album_path(@album) %> | <%= link_to "delete", @album, method: :delete, data: { confirm: "You sure?"} %></span>
</section>
<div>
   <%=render 'shared/upload_form'%>
</div>
<div>
  <%=form_for @album, url: { action: "exportexcel" }  do |f| %>
  <%= text_field_tag "csize" %>
   <%= f.submit "ExportExcel"%>
  <% end %>
</div>
 <div class="photo_list">
      <ul id="phtot_list">
       <%= render @album.photos%>
      </ul>
 </div>

 <div class="photo_url">



   <textarea id="photo_url" ><%= @photourls %></textarea>



 <p>
    <button id="bt_photo_url" onClick="CopyURL('photo_url')" >Copy</button>
 </p>
 <div>
</div>

</div>
<script type="text/javascript">

  function CopyURL(obj)
  {
  var url=$("#"+obj);
  url.select();
  document.execCommand("Copy"); // 执行浏览器复制命令
  alert("Copy successful！Please paste it!");

  }



</script>
