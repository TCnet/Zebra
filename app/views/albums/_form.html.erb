<%= form_for(@album) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :summary %>
    <%= f.text_area :summary, class: 'form-control',placeholder: "Compose summary" %>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
 <% end %>
